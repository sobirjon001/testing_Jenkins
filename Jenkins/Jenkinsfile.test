pipeline {
    agent any

    tools {
        maven 'm3'
    }

    parameters {
        text(name: 'ENV_PARAMS', defaultValue: '''NOT_SKIPPED=value_will_be_used
#SKIPPED=will_be_skipped
IGNORED''', description: 'environment variables',)
        text(name: 's3files', defaultValue: '''s3://one/two/three*.csv''', description: 's3 bucket files to download',)
    }
    environment {
        THREE = "THREE_value"
        ENV = "${ENV_PARAMS}"
    }

    stages {
        stage('clear ENV_PARAMS') {
            steps {
                sh 'ENV_PARAMS=""'
            }
        }
        stage('clone repo') {
            steps {
                git 'https://github.com/sobirjon001/testing_Jenkins.git'
            }
        }
        stage('downloading s3 files') {
            steps {
                sh '''
                    for line in $s3files; do 
                        echo " downloading file '$line' . . ."
                    done  
                '''
            }
        }
        stage('ENV print') {
            steps {
                echo "ENV:\n $ENV"
                echo "ENV_2:\n ${params.ENV}"
            }
        }
        stage('Env print') {
            steps {
                echo "ONE = ${env.ONE}"
                echo "TWO = ${env.TWO}"
                echo "THREE = ${env.THREE}"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn clean test verify -DNODES=1 -DTAGS=@Test'
            }
        }
    }
    post {
        always {
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'results/cucumber-html-reports', reportFiles: 'overview-features.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
            cleanWs()
        }
    }
}
